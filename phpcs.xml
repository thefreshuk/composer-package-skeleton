<?xml version="1.0"?>
<ruleset name=":package_name">
    <description>Skeleton Coding Standard</description>

    <!-- Use the PSR2 Standard-->
    <rule ref="PSR2" />

    <file>src/</file>
    <file>tests/</file>
    <file>examples/</file>

    <rule ref="PSR1.Methods.CamelCapsMethodName.NotCamelCaps">
        <exclude-pattern>tests</exclude-pattern>
    </rule>
</ruleset>
